{
  "manifest_version": 3,
  "name": "Pomodoro Timer",
  "version": "1.2",
  "description": "Focus with the Pomodoro technique!",
  "permissions": ["alarms", "notifications", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
}
